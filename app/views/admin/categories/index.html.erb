<div class="container">
  <div class="row mb-3">
    <div class="col-md-5">
      <h3>カテゴリ一覧・追加</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= form_with model: @category,url: admin_categories_path do |f| %>
      <table class="table">
        <tbody>
          <tr>
            <th>カテゴリ名</th>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit '新規登録', class:"btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>

      <table class="table table-striped">
      <% @categories.each do |category| %>
        <tbody>
          <tr>
            <th><%= category.name %></th>
            <td><%= link_to "編集する", edit_admin_category_path(category), class:"btn btn-success" %></td>
          </tr>
        </tbody>
      <% end %>
      </table>
    </div>
  </div>
</div>

