<div class="container">
  <div class="row">
    <div class="col text-center">
      <h3 class="mt-3 mb-3">会員のレシピ投稿一覧</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 mx-auto">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>レシピid</th>
            <th>名前</th>
            <th>ユーザー名</th>
            <th>商品名</th>
          </tr>
        </thead>
        <tbody>
          <% @recipes.each do |recipe| %>
          <tr>
            <td><%= recipe.id %></td>
            <td>
                <%= recipe.customer.last_name %>
                <%= recipe.customer.first_name %>
            </td>
            <td><%= recipe.customer.user_name %></td>
            <td><%= link_to recipe.name, admin_recipe_path(recipe) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>



