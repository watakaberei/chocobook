<div class="container">
  <div class="row">
    <div class="col text-center">
      <h3 class="mt-3 mb-3"><%= @recipe.name %></h3>
      <p class="mt-3 mb-5"><%= @recipe.introduction %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-5">
      <%= image_tag @recipe.image, size: "350x290" %>
    </div>

    <div class="col-lg-7">
      <div class="row">
        <p class="pr-5">
          <strong>材料・分量</strong>
        </p>
        <div id="materials">
        <% @recipe.materials.each do |material| %>
          <li class="material__ul">
            <%= material.name %>
            <%= material.amount %>
          </li>
        <% end %>
        </div>
      </div>

      <div class="row mt-4">
        <p class="pr-5">
          <strong>調理時間</strong>
        </p>
        <%= @recipe.cooktime %>
      </div>
    </div>
  </div>

  <div class="row justify-content-center mt-5">
    <h4>調理手順</h4>
  </div>

  <div class="row justify-content-center mt-1">
    <div class="procedure__ul">
      <ol>
        <% @recipe.procedures.each do |procedure| %>
          <li><%= procedure.body %></li>
        <% end %>
      </ol>
    </div>
  </div>

  <div class="row">
    <p>コメント件数：<%= @recipe.recipe_comments.count %></p>
  </div>

  <div class="px-5">
    <% @recipe.recipe_comments.each do |recipe_comment| %>
    <div>
      <%= recipe_comment.created_at.strftime('%Y/%m/%d') %>
      <%= recipe_comment.customer.user_name %>
      <%= recipe_comment.comment %>
      <%= link_to "削除", admin_recipe_comment_path(recipe_comment), method: :delete, "data-confirm" => "本当に削除しますか？" %>
    </div>
    <% end %>
  </div>

  <div class="row mt-5 mb-5">
    <%= link_to "編集する", edit_admin_recipe_path(@recipe), class: "btn btn-success" %>
  </div>
</div>

