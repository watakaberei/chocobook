<div class="container">
  <div class="row">
    <div class="col text-center">
      <h3 class="mt-3">
        <%= @customer.user_name %>さんの詳細画面
      </h3>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-10 mx-auto">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>氏名</th>
            <td>
              <%= @customer.last_name %>
              <%= @customer.first_name %>
            </td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td>
              <%= @customer.last_name_kana %>
              <%= @customer.first_name_kana %>
            </td>
          </tr>
          <tr>
            <th>ユーザー名</th>
            <td><%= @customer.user_name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <% if @customer.is_deleted == false %>
                有効
                <% else %>
                退会済み
              <% end %>
            </td>
          </tr>
          <tr>
            <th></th>
            <td><%= link_to "編集する", edit_admin_customer_path(@customer), class:"btn btn-success" %>
          </tr>
        <tbody>
      </table>
    </div>
  </div>
</div>
