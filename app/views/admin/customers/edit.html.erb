<div class="container">
  <div class="row">
    <div class="col text-center">
      <h3 class="mt-3">会員情報編集</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 mx-auto">
      <%= form_with model: @customer,url: admin_customer_path, method: :patch do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>氏名</th>
            <td>
              <%= f.text_field :last_name %>
              <%= f.text_field :first_name %>
            </td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td>
              <%= f.text_field :last_name_kana %>
              <%= f.text_field :first_name_kana %>
            </td>
          </tr>
          <tr>
            <th>ユーザー名</th>
            <td><%= f.text_field :user_name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td> <%= f.email_field :email, autofocus: true, maxlength: "40" %></td>
          </tr>
        </tbody>
      </table>

      <div class="row justify-content-center mt-3 mb-3">
        <%= f.submit '編集内容を保存', class:"btn btn-success" %>
      </div>
      <% end %>

    </div>
  </div>
</div>


