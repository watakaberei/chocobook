<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">管理者ログイン</h5>
      <div class="form-body p-4">

        <div class="mx-auto text-center">
            <!-- ここからを追加 -->
            <p>メールアドレスと<br>パスワードを入力してください。</p>
            <!-- ここまでを追加 -->
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-group mb-3">
            <!-- ここからを追加 -->
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            </div>
            <%= f.text_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
            <!-- ここまでを追加 -->
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
            </div>
            <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"パスワード" %>
          </div>
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :パスワードを保存 %>
              </div>
            <% end %>
          <%= f.submit "ログイン", class:"btn btn-lg btn-block btn-info" %>
        <% end %>
       </div>
   　 </div>
  　</div>
  </div>
</div>

