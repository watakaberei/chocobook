<div class="container">
  <div class="row mt-3">
    <div class="col text-center">
      <h3>会員登録</h3>
    </div>
  </div>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row justify-content-center mt-3">
    <table class="customer_info customer_form">
      <tbody>
        <tr>
          <th class="px-4"><%= f.label :名前 %></th>
          <td class="px-4">
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "(姓)" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "(名)" %>
          </td>
        </tr>
        <tr>
          <th class="px-4 py-4"><%= f.label :フリガナ %></th>
          <td class="px-4 py-4">
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "(セイ)" %>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "(メイ)" %>
          </td>
        </tr>
        <tr>
          <th class="px-4 py-4"><%= f.label :ユーザー名 %></th>
          <td class="px-4 py-4">
            <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
          </td>
        </tr>
        <tr>
          <th class="px-4 py-4"><%= f.label :メールアドレス %></th>
          <td class="px-4 py-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", maxlength: "40" %>
          </td>
        </tr>
        <tr>
          <th class="px-4 py-4"><%= f.label :パスワード %></th>
          <td class="px-4 py-4">
            <% if @minimum_password_length %>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", maxlength: "30" %>      
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          </td>
        </tr>
        <tr>
          <th class="px-4 py-4"><%= f.label :"パスワード(確認用)" %></th>
          <td class="px-4 py-4">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", maxlength: "30" %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <div class="row justify-content-center mt-3">
    <%= f.submit "新規登録", class:"btn btn-success text-center" %>
  </div>
  <% end %>
  
  <div class="row">
    <div class="col text-right">
      <p>※既に会員済の方は<%= link_to "こちら", new_customer_session_path %>からログインください。</p>
    </div>
  </div>
</div>
