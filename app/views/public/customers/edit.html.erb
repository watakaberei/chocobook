<div class="container">
  <div class="row">
    <div class="col text-center">
      <h3>編集画面</h3>
    </div>
  </div>

  <%= form_with model: @customer, local: true, url: customers_information_edit_path, method: :patch do |f| %>
  <% if @customer.errors.any? %>
    <%= @customer.errors.count %>件のエラーが発生しました
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row justify-content-center mt-4">
    <table class="customer_info customer_form">
      <thead>
        <th></th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <th class="px-4">氏名</th>
          <td class="px-4"><%= f.text_field :last_name %>
          <%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th class="px-4 py-4">フリガナ</th>
          <td class="px-4 py-4"><%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <th class="px-4 py-4">ユーザー名</th>
          <td class="px-4 py-4"><%= f.text_field :user_name %></td>
        </tr>
        <tr>
          <th class="px-4 py-4">メールアドレス</th>
          <td class="px-4 py-4"><%= f.text_field :email, maxlength: "40" %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="row mt-5">
    <div class="mx-auto">
      <%= f.submit '変更する', class:"btn btn-success", "data-confirm" => "変更しますか？" %>
    </div>
  </div>
  <% end %>
</div>

