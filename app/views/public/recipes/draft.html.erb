<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col text-center">
      <h3 class="mt-3 mb-3">下書き一覧</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 mx-auto">
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>レシピ名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @recipes.each do |recipe| %>
          <tr>
            <td></td>
            <td><%= recipe.name %></td>
            <td><%= link_to "詳細", edit_recipe_path(recipe) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

